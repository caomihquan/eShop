@model Eshop.ViewModels.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>RoleAssign</h1>

<h4>RoleAssignRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleAssign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden"/>
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-group">
                    <label>
                        @Model.Roles[i].Name
                        <input type="checkbox" asp-for="Roles[i].Selected" />
                        <input asp-for="Roles[i].Id" type="hidden" />
                        <input asp-for="Roles[i].Name" type="hidden" />



                    </label>
                    <span asp-validation-for="Roles[i].Name" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

